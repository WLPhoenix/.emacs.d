#!/bin/bash

YUM_INSTALLS="curl tar redis nginx sqlite3 openldap-devel cyrus-sasl-devel libxml2-devel libxslt-devel python-devel readline-devel sqlite-devel"
APT_INSTALLS="curl tar redis-server nginx sqlite3 libldap2-dev libsasl2-dev libxml2-dev libxslt1-dev python-dev libsqlite3-dev"
BREW_INSTALLS="curl gnu-tar redis nginx sqlite3"

if [ 1 ]; then
    if [ `which brew` ]; then
	brew install "$BREW_INSTALLS";
    else
	echo "Brew not installed. Please install before running script.";
	exit 1;
    fi;

elif [ `ls /redhat-release` ]; then
    sudo yum -y install $YUM_INSTALLS;

elif [ `ls /etc/debian_version` ]; then
    sudo apt-get -y install $APT_INSTALLS;
fi;

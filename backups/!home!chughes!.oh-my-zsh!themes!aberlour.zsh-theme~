bgc="%{$BG[018]%}"
fgc1="%{$FG[242]%}"
fgc2=
gfc3=
virtualenv_info() {
    [ $VIRTUAL_ENV ] && echo '('`basename $VIRTUAL_ENV`') '
}

prompt_path() {
    echo -n "${fgc1}%~"
}

promt_ts() {
    echo -n "${fgc1}%*"
}

prompt_symbol() {
  if [[ $UID -eq 0 ]]; then
    echo -n "%{$bg[red]%}%{$fg[white]%} !! "
  else
    echo -n "%{$fg[green]%} >> "
  fi
}

PROMPT=$'$(virtualenv_info)$(prompt_path)\n$(promt_ts)$(prompt_symbol)'
#RPS1="%{$fg_bold[blue]%}%n@%m%{$reset_color%}"

ZSH_THEME_GIT_PROMPT_PREFIX=" %{$fg[yellow]%}("
ZSH_THEME_GIT_PROMPT_SUFFIX=")%{$reset_color%}"
ZSH_THEME_GIT_PROMPT_CLEAN=""
ZSH_THEME_GIT_PROMPT_DIRTY="%{$fg[red]%} âš¡%{$fg[yellow]%}"

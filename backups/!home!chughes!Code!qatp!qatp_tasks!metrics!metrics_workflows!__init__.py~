from .hbase_batch import HBaseBatch
from .hbase_streaming import HBaseStreaming
from .hbase_schedule import HBaseSchedule
from .cassandra_batch import CassandraBatch
from .cassandra_streaming import CassandraStreaming
from .accumulo_batch import AccumuloBatch
from .accumulo_streaming import AccumuloStreaming
from .queries_only import QueriesOnly


def get_workflows():
    return {
        HBaseBatch.NAME: HBaseBatch,
        HBaseStreaming.NAME: HBaseStreaming,
        HBaseSchedule.NAME: HBaseSchedule,
        CassandraBatch.NAME: CassandraBatch,
        CassandraStreaming.NAME: CassandraStreaming,
        AccumuloBatch.NAME: AccumuloBatch,
        AccumuloStreaming.NAME: AccumuloStreaming,
        QueriesOnly.NAME: QueriesOnly,
    }


def get_workflow(name):
    return get_workflows().get(name)
